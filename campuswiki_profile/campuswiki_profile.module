<?php
/**
 * @file
 * Code for the CampusWiki Profile feature.
 */

include_once 'campuswiki_profile.features.inc';
module_load_include('inc', 'campuswiki_profile', 'campuswiki_profile.block');
module_load_include('inc', 'campuswiki_basic', 'campuswiki_basic.functions');
module_load_include('inc', 'campuswiki_profile', 'campuswiki_profile');

/**
 * Implements hook_block_info().
 *
 */
function campuswiki_profile_block_info() {
  $blocks['cw_user_info'] = array(
    'info' => t('Campuswiki User Info'),
    'cache' => DRUPAL_NO_CACHE
    // DRUPAL_CACHE_PER_ROLE will be assumed if not set.
  );
  
  // create block to list user groups
  $blocks['cw_user_groups'] = array(
    'info' => t('Campuswiki User Groups'),
    'cache' => DRUPAL_NO_CACHE,
  );
  
  return $blocks;
}


/**
 * Implements hook_block_view().
 *
 */
function campuswiki_profile_block_view($delta = '') {

  $block = array(); 

  switch ($delta) {
    
    case 'cw_user_info':
      $content = campuswiki_profile_user_info_block();
      if (!empty($content)) {
        $block['subject'] = t('');
        $block['content'] = $content;
      }
      break;
    
    case 'cw_user_groups':
      $content = campuswiki_profile_user_groups_block();
      if (!empty($content)) {
        $block['subject'] = t('Groups');
        $block['content'] = $content;
      }
      break;
  }
  return $block;
}